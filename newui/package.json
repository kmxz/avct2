{
  "name": "newui",
  "dependencies": {
    "lit-element": "^3.0.0-pre.3"
  },
  "scripts": {
    "dev": "tmux new-session 'tsc --watch' \\; split-window 'web-dev-server --node-resolve --root-dir './src' --watch' \\; select-layout even-vertical",
    "build": "tsc && rollup -c -i src/index.js",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer 'src/**/*.ts'",
    "clean": "find ./src -name '*.js' -delete && find ./src -name '*.js.map' -delete"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "@typescript-eslint/eslint-plugin": "^4.1.3",
    "@typescript-eslint/parser": "^4.1.3",
    "@web/dev-server": "^0.1.8",
    "eslint": "^6.8.0",
    "lit-analyzer": "^1.1.10",
    "parse-literals": "^1.2.1",
    "rollup": "^2.28.2",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.2.3",
    "typescript": "^4.1.3"
  }
}
